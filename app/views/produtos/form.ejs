<html>
  <head>
    <meta charset="utf-8">
  </head>
  <body>
      <form action="/produtos/salva" method="post" id="cadastro">
        <div>
          <label for="titulo">Titulo</label>
          <input type="text" name="titulo" id="titulo" placeholder="Coloque o nome do livro aqui">
        </div>
        <div>
          <label for="preco">Preço</label>
          <input type="text" name="preco" id="preco" placeholder="99.99">
        </div>
        <div>
          <label for="descricao">Descrição</label>
          <textarea name="descricao" id="descricao" rows="8" cols="80" form="cadastro" placeholder="Insira a descrição do livro aqui"></textarea>
        </div>
        <input type="submit" value="Gravar">
      </form>
  </body>
</html>
